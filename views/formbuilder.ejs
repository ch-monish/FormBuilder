                <div class="modal fade" id="textboxmodal" tabindex="0" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <form id="textboxmodal">
                                    <h3>Text Box</h3>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">Label:</label>
                                        <input type="text" class="form-control" id="textboxmodal-label">
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">Placeholder:</label>
                                        <input type="text" class="form-control" id="textboxmodal-placeholder">
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col">

                                                <input type="radio" id="textboxmodal-text" name="type" value="text">
                                                <label for="textboxmodal-text">text</label><br>
                                                <input type="radio" id="textboxmodal-password" name="type"
                                                    value="password">
                                                <label for="textboxmodal-password">Password</label><br>
                                                <input type="radio" id="textboxmodal-email" name="type" value="email">
                                                <label for="textboxmodal-email">Email</label><br>
                                                <input type="radio" id="textboxmodal-number" name="type" value="number">
                                                <label for="textboxmodal-number">number</label><br>
                                            </div>
                                            <div class="col">


                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="switch0"
                                                        value="off" onclick="requiredchange()">
                                                    <script>
                                                        function requiredchange() {
                                                            var change = document.getElementById("switch0").value;

                                                            if (change == "on") {
                                                                document.getElementById("switch0").value = "off"
                                                            }
                                                            else {
                                                                document.getElementById("switch0").value = "on"
                                                            }
                                                        }
                                                    </script>
                                                    <label class="custom-control-label" for="switch0">Required</label>
                                                </div>



                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="switch1"
                                                        value="off" onclick="change()">
                                                    <script>
                                                        function change() {
                                                            var change = document.getElementById("switch1").value;

                                                            if (change == "on") {
                                                                document.getElementById("switch1").value = "off"
                                                            }
                                                            else {
                                                                document.getElementById("switch1").value = "on"
                                                            }
                                                        }
                                                    </script>
                                                    <label class="custom-control-label" for="switch1">Allow
                                                        attachments</label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </form>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary"
                                    onclick='createTextBox({"method":"default"})' data-dismiss="modal">Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="checkboxmodal" tabindex="0" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h3>Check Box</h3>
                                <form id="checkboxmodal" class="form-group">
                                    <label for="recipient-name" class="col-form-label">Check-box Label:</label>
                                    <input type="text" class="form-control" id="checkboxmodal-text">

                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    onclick='createcheckbox({"method":"default"})'>Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="buttonmodal" tabindex="0" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h3>Button</h3>
                                <form>
                                    <div class="form-group">
                                        <label class="col-form-label">Name on button:</label>
                                        <input type="text" class="form-control" id="buttonmodal-button" value="submit">
                                    </div>
                                </form>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    onclick='createButton({"method":"default"})'>Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="selectradio" tabindex="0" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h3>Radio button</h3>
                                <form>
                                    <div class="form-group">
                                        <label class="col-form-label">Enter label:</label>
                                        <input type="text-area" class="form-control" id="selectradio-input">
                                        <label class="col-form-label">Enter options </label>
                                        <textarea class="form-control" id="selectradio-Textarea" rows="3"></textarea>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    onclick='createradio({"method":"default"})''>Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="selectmodal" tabindex="0" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h3>Select</h3>
                                <form>
                                    <div class="form-group">
                                        <label class="col-form-label">Enter label:</label>
                                        <input type="text-area" class="form-control" id="selectmodal-input">
                                        <label class="col-form-label">Enter options in selction order : </label>
                                        <textarea class="form-control" id="selectmodal-Textarea" rows="3"></textarea>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    onclick=' createselect({"method":"default"})'>Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="textarea" tabindex="0" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h3>Select</h3>
                                <form>
                                    <div class="form-group">
                                        <label class="col-form-label">Enter label:</label>
                                        <input type="text-area" class="form-control" id="textarea-input">

                                    </div>
                                </form>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                    onclick='createtextarea({"method":"default"})'>Save
                                    changes</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

